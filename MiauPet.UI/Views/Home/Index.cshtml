@model MiauPet.UI.ViewModels.HomeVM
@{
    ViewData["Title"] = "MiauPet - Sua Loja Virtual";
}

<section class="bg-miau-azul-claro py-5 mb-5 rounded-5 shadow-sm">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3 text-miau-azul">Cuidado, Carinho e os Melhores Produtos</h1>
                <p class="lead mb-4 text-muted">Encontre tudo que seu pet precisa com os preços mais competitivos do
                    mercado e entrega rápida.</p>
                <div class="d-flex flex-wrap gap-3">
                    <a asp-action="Produtos" class="btn btn-miau-rosa btn-lg px-4 shadow">
                        <i class="fas fa-shopping-bag me-2"></i>Ver Todos os Produtos
                    </a>
                    <a href="#produtos-destaque" class="btn btn-outline-miau-rosa btn-lg px-4">
                        <i class="fas fa-star me-2"></i>Ver Destaques
                    </a>
                </div>
            </div>
            <div class="col-lg-4 text-center d-none d-lg-block">
                <i class="fas fa-paw fa-8x text-miau-azul"></i>
            </div>
        </div>
    </div>
</section>

<div class="container pb-5">
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-miau-azul">Navegue por Categorias</h2>
            <a asp-action="Produtos" class="btn btn-outline-primary btn-sm text-miau-azul border-miau-azul">
                Ver Todas <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>

        @if (Model.Categorias.Any())
        {
            <div class="row g-3 justify-content-center">
                @foreach (var categoria in Model.Categorias)
                {
                    <div class="col-auto">
                        <a asp-action="Produtos" asp-route-categoriaId="@categoria.Id"
                            class="btn text-white rounded-pill px-4 py-2 shadow-sm" style="background-color: @categoria.Cor;">
                            @categoria.Nome
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhuma categoria disponível</h4>
                <p class="text-muted">Em breve teremos novidades!</p>
            </div>
        }
    </section>

    <div class="my-5 py-3 text-center">
        <div class="d-flex align-items-center justify-content-center">
            <div class="flex-grow-1 border-top border-2"></div>
            <div class="px-3">
                <i class="fas fa-heart text-miau-rosa fa-lg"></i>
            </div>
            <div class="flex-grow-1 border-top border-2"></div>
        </div>
    </div>

    <section id="produtos-destaque" class="mb-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold display-5 text-miau-azul">Produtos em Destaque</h2>
            <p class="lead text-muted">Confira nossos produtos mais populares</p>
        </div>

        @if (Model.ProdutosDestaque.Any())
        {
            <div class="row g-4">
                @foreach (var produto in Model.ProdutosDestaque)
                {
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="card h-100 shadow-sm border-0 transition-3s">
                            <div class="product-image-wrapper position-relative">
                                @if (!string.IsNullOrEmpty(produto.Foto))
                                {
                                    <img src="@produto.Foto" alt="@produto.Nome" class="fluid">
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                }

                                @if (produto.Destaque)
                                {
                                    <div class="position-absolute top-0 end-0 m-2">
                                        <span class="badge badge-miau-amarelo">
                                            <i class="fas fa-star me-1"></i>Destaque
                                        </span>
                                    </div>
                                }

                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge @(produto.Qtde > 0 ? "badge-miau-amarelo" : "bg-danger")">
                                        @produto.Qtde
                                    </span>
                                </div>
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title fw-bold">@produto.Nome</h6>
                                <small class="text-muted mb-2">@produto.CategoriaNome</small>

                                @if (!string.IsNullOrEmpty(produto.Descricao))
                                {
                                    <p class="card-text small text-muted flex-grow-1">
                                        @produto.Descricao
                                    </p>
                                }

                                <div class="mt-auto pt-3">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="h5 text-balck fw-bold mb-0">
                                            R$ @produto.ValorVenda.ToString("N2")
                                        </span>
                                        @if (produto.ValorCusto > 0)
                                        {
                                            <small class="text-muted text-decoration-line-through">
                                                R$ @produto.ValorCusto.ToString("N2")
                                            </small>
                                        }
                                    </div>
                                    <a asp-action="Detalhes" asp-route-id="@produto.Id" class="btn btn-miau-rosa w-100">
                                        <i class="fas fa-eye me-1"></i>Ver Detalhes
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5 pt-3">
                <a asp-action="Produtos" class="btn btn-outline-miau-rosa btn-lg px-5">
                    <i class="fas fa-shopping-bag me-2"></i>Ver Todos os Produtos
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhum produto em destaque</h4>
                <p class="text-muted mb-4">Volte em breve para conferir nossas ofertas!</p>
                <a asp-action="Produtos" class="btn btn-miau-rosa">
                    <i class="fas fa-store me-2"></i>Explorar Loja
                </a>
            </div>
        }
    </section>

    <div class="my-5 py-5"></div>

    <section class="row g-4 mb-5">
        <div class="col-md-4">

            <div class="text-center p-4">
                <div class="bg-miau-azul-claro rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                    style="width: 100px; height: 100px;">
                        <img src="/img/logo/logo_entrega.png" alt="Caminhão de Entrega Rápida" class="img-fluid"
                            style="max-width: 170px; height: auto; margin-top: 25px" />
                </div>
                <h5 class="fw-bold text-miau-azul">Entrega Rápida</h5>
                <p class="text-muted">Entregamos em todo o país com agilidade e segurança.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center p-4">
                <div class="bg-miau-azul-claro rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                    style="width: 100px; height: 100px;">
                    <img src="/img/logo/cuidado_logo.png" alt="logo cuidado pet" class = "img-fluid"
                        style="max-width: 150px; height: auto; margin-top: 20px">
                </div>
                <h5 class="fw-bold text-miau-azul">Cuidado MiauPet</h5>
                <p class="text-muted">Produtos selecionados com o máximo de carinho e qualidade.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center p-4">
                <div class="bg-miau-azul-claro rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                    style="width: 100px; height: 100px;">
                    <img src="img/logo/suporte_logo.png" alt="suporte logo" class ="img-fluid"
                        style ="max-width: 180px; height: auto; margin-top: 24px" >
                </div>
                <h5 class="fw-bold text-miau-azul">Suporte 24/7</h5>
                <p class="text-muted">Nossa equipe está sempre pronta para te ajudar.</p>
            </div>
        </div>
    </section>
</div>