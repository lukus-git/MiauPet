@model List<MiauPet.UI.DTOs.ProdutoDto>
@{
    ViewData["Title"] = "Nossos Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml"; // <-- GARANTA QUE O LAYOUT COM A LOGO ESTEJA AQUI
}
<style>
    /* Cores MiauPet */
    :root {
        --miau-pet-amarelo: #ffdd00; /* Gato - Destaque Principal */
        --miau-pet-rosa: #ff69b4; /* 'iAu' - Cor Interativa/CTA */
        --miau-pet-azul: #007bff; /* C칚o - Cor Prim치ria Padr칚o */
        
        /* Definindo as vari치veis Bootstrap para as cores da logo */
        --bs-primary: var(--miau-pet-azul);
        --bs-warning: var(--miau-pet-amarelo);
    }
    
    /* Utilit치rio para o Rosa - Usado no bot칚o de detalhes e destaque no pre칞o */
    .bg-miau-rosa {
        background-color: var(--miau-pet-rosa) !important;
    }

    .btn-miau-rosa {
        color: white;
        background-color: var(--miau-pet-rosa);
        border-color: var(--miau-pet-rosa);
        transition: background-color 0.2s;
    }

    .btn-miau-rosa:hover {
        background-color: #e85a9f; /* Rosa um pouco mais escuro no hover */
        border-color: #e85a9f;
        color: white;
    }
    
    /* Novo estilo para o Item de Filtro ATIVO - Usaremos o ROSA para ele! */
    .list-group-item.active.bg-miau-rosa-active {
        background-color: var(--miau-pet-rosa) !important;
        border-color: var(--miau-pet-rosa) !important;
        color: white;
    }

    /* Estilo do Card do Produto (manter o visual limpo) */
    .card-produto {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 1rem;
    }

    .card-produto:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(27, 27, 27, 0.15) !important;
    }

    .card-img-top {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    /* Estilo para pre칞o */
    .preco-venda {
        color: black !important;
        font-size: 1.25rem;
    }
</style>

<div class="container py-5">
    <div class="row">
<div class="col-lg-3 mb-4">
            <div class="card shadow-lg border-0 rounded-4 sticky-top" style="top: 20px;">
                
                <div class="card-header bg-warning text-dark py-3 rounded-top-4">
                    <h5 class="card-title mb-0 d-flex align-items-center">
                        <i class="fas fa-paw fa-lg me-3 text-dark"></i>
                        <span class="fw-bolder text-uppercase">O que voc칡 procura?</span>
                    </h5>
                </div>
                
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3 text-black border-bottom pb-2">
                        <i class="fas fa-list-ul me-2"></i> Categorias
                    </h6>
                    
                    <div class="list-group list-group-flush">
                        <a asp-action="Produtos" 
                            class="list-group-item list-group-item-action py-2 
                                @(ViewBag.CategoriaSelecionada == 0 ? "active bg-miau-rosa-active fw-bold rounded-2 shadow-sm" : "text-muted")">
                            <i class="fas fa-filter me-2 @(ViewBag.CategoriaSelecionada == 0 ? "text-white" : "text-primary")"></i> 
                            Todas as Categorias
                        </a>
                        
                        @foreach (var categoria in ViewBag.Categorias)
                        {
                            <a asp-action="Produtos" asp-route-categoriaId="@categoria.Id"
                                class="list-group-item list-group-item-action py-2 
                                    @(ViewBag.CategoriaSelecionada == categoria.Id ? "active bg-miau-rosa-active fw-bold rounded-2 shadow-sm" : "text-dark")">
                                <i class="fas fa-tag me-2"></i> 
                                @categoria.Nome
                            </a>
                        }
                    </div>

                    <h6 class="fw-bold mt-4 mb-3 text-black border-bottom pb-2">
                        <i class="fas fa-dog me-2"></i> Filtro R치pido
                    </h6>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary rounded-pill btn-sm">C칚es</button>
                        <button class="btn btn-outline-primary rounded-pill btn-sm">Gatos</button>
                        <button class="btn btn-miau-rosa rounded-pill btn-sm">Ofertas do Dia</button>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
                <h1 class="h2 fw-bold text-dark">Nossos Produtos</h1>
                <span class="badge bg-secondary rounded-pill p-2">
                    <i class="fas fa-box-open me-1"></i> @Model.Count itens
                </span>
            </div>

            @if (TempData["Erro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["Erro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row g-4">
                    @foreach (var produto in Model)
                    {
                        <div class="col-sm-6 col-xl-4">
                            <div class="card h-100 card-produto shadow-lg border">
                                <div class="position-relative">
                                    @if (!string.IsNullOrEmpty(produto.Foto))
                                    {
                                        <img src="@produto.Foto" alt="@produto.Nome" 
                                                class="card-img-top" style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" 
                                                style="height: 200px; border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                                            <i class="fas fa-image fa-4x text-muted opacity-50"></i>
                                        </div>
                                    }
                                    


                                    @* Estoque com cor prim치ria (Azul) ou Vermelho *@
                                    <div class="position-absolute top-0 end-0 m-2">
                                        <span class="badge @(produto.Qtde > 0 ? "bg-primary" : "bg-danger") fw-bold">
                                            @produto.Qtde @(produto.Qtde == 1 ? "unidade" : "Unidades")
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="card-body d-flex flex-column p-3">
                                    <small class="text-secondary text-uppercase fw-semibold mb-1">@produto.CategoriaNome</small>
                                    <h5 class="card-title fw-bolder text-dark mb-2" style="min-height: 48px;">@produto.Nome</h5>
                                    
                                    @if (!string.IsNullOrEmpty(produto.Descricao))
                                    {
                                        <p class="card-text small text-muted flex-grow-1" style="min-height: 40px;">
                                            @produto.Descricao
                                        </p>
                                    }
                                    
                                    <div class="mt-auto pt-3 border-top">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="preco-venda fw-bolder mb-0">
                                                R$ @produto.ValorVenda.ToString("N2")
                                            </span>
                                            @if (produto.ValorCusto > 0 && produto.ValorVenda > produto.ValorCusto)
                                            {
                                                <small class="text-danger text-decoration-line-through fw-light">
                                                    R$ @produto.ValorCusto.ToString("N2")
                                                </small>
                                            }
                                        </div>
                                        @* Usando o Rosa da logo no bot칚o para um CTA forte *@
                                        <a asp-action="Detalhes" asp-route-id="@produto.Id" 
                                            class="btn btn-miau-rosa w-100 rounded-pill py-2">
                                            <i class="fas fa-search-plus me-1"></i> Ver Detalhes
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-light rounded-3 shadow-sm">
                    <i class="fas fa-search fa-5x text-secondary mb-3"></i>
                    <h4 class="text-dark fw-bold">游땞 Nenhum produto encontrado</h4>
                    <p class="text-muted">Parece que n칚o temos itens para a categoria selecionada. Tente outra!</p>
                    <a asp-action="Produtos" class="btn btn-primary mt-3 rounded-pill px-4">
                        <i class="fas fa-redo me-1"></i> Ver Todos os Produtos
                    </a>
                </div>
            }
        </div>
    </div>
</div>