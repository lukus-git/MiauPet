@model MiauPet.UI.DTOs.ProdutoDto
@{
    ViewData["Title"] = "MiauPet";
}

<style>
    /* Estilo para controlar o tamanho máximo do contêiner da imagem */
    .product-detail-image-wrapper {
        height: 450px; /* Define a altura fixa do contêiner para diminuir o tamanho */
        max-width: 100%; 
        display: flex; /* Para centralizar o conteúdo verticalmente (placeholder ou imagem) */
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    
    /* Garante que a imagem se ajuste à altura máxima do contêiner */
    .product-detail-image-wrapper img {
        max-height: 100%;
        width: auto;
    }
</style>

<div class="container py-5">

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-miau-rosa">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Produtos"
                    class="text-decoration-none text-miau-rosa">Produtos</a></li>
            <li class="breadcrumb-item active text-muted" aria-current="page">@Model.Nome</li>
        </ol>
    </nav>

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class= "product-detail-image-wrapper rounded-4 shadow-lg"> 
                @if (!string.IsNullOrEmpty(Model.Foto))
                {
                    <img src="@Model.Foto" alt="@Model.Nome" class="img-fluid"
                        style="object-fit: contain;">
                }
                else
                {
                    <div class="bg-light rounded-4 d-flex align-items-center justify-content-center border"
                        style="height: 500px;">
                        <i class="fas fa-image fa-5x text-muted"></i>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0">
                <div class="card-body p-0">

                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <span class="badge bg-miau-azul py-2 px-3 fs-6">@Model.CategoriaNome</span>
                        @if (Model.Destaque)
                        {
                            <span class="badge bg-miau-amarelo text-dark py-2 px-3 fs-6">
                                <i class="fas fa-star me-1"></i>Destaque
                            </span>
                        }
                    </div>

                    <h1 class="h2 fw-bolder mb-3">@Model.Nome</h1>

                    <div class="mb-4 d-flex flex-column">
                        <span class="h1 text-miau-rosa fw-bolder">R$ @Model.ValorVenda.ToString("N2")</span>

                        @if (Model.ValorCusto > 0)
                        {
                            <small class="text-muted mt-1">
                                Parcele em até 12x sem juros!
                            </small>
                        }
                    </div>

                    <div class="mb-4">
                        <span class="badge @(Model.Qtde > 0 ? "bg-primary" : "bg-danger") fs-6 py-2 px-3">
                            @(Model.Qtde > 0 ? $"{Model.Qtde} unidades em estoque" : "Fora de estoque")
                        </span>
                        @if (Model.Qtde > 0 && Model.Qtde <= 5)
                        {
                            <span class="ms-2 text-danger fw-bold"><i class="fas fa-exclamation-triangle me-1"></i>Últimas
                                unidades!</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Descricao))
                    {
                        <div class="mb-4 pt-3 border-top">
                            <h5 class="fw-bold mb-2">Descrição</h5>
                            <p class="text-muted">@Model.Descricao</p>
                        </div>
                    }

                    <div class="d-grid gap-2 pt-3 border-top">
                        @if (Model.Qtde > 0)
                        {
                            <button class="btn btn-lg btn-miau-rosa shadow-sm">
                                <i class="fas fa-shopping-cart me-2"></i>Adicionar ao Carrinho
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-lg" disabled>
                                <i class="fas fa-times me-2"></i>Produto Indisponível
                            </button>
                        }

                        <a asp-action="Produtos" class="btn btn-outline-miau-rosa btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Continuar Comprando
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

 <div class="row mt-5 pt-4 border-top">
        <div class="col-12">
            <h3 class="fw-bolder mb-4" style="color: var(--miau-pet-azul);">
                <i class="fas fa-paw me-2"></i> Mais Opções para Você
            </h3>
            
            <div class="row g-4" id="produtosRelacionados">
                {{-- Conteúdo inicial (Carregando) --}}
                <div class="col-12 text-center py-5 bg-light rounded-4 shadow-sm">
                    <div class="spinner-border" style="color: var(--miau-pet-rosa);" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                    <p class="text-muted mt-3">Estamos selecionando os melhores produtos relacionados...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Carregar produtos da mesma categoria
        document.addEventListener('DOMContentLoaded', function () {
            const categoriaId = '@Model.CategoriaId';
            const produtoId = '@Model.Id';

            if (categoriaId) {
                // Sugestão: Crie um endpoint específico (ex: /Api/ProdutosRelacionados)
                // para não ter que buscar toda a página de listagem, mas manteremos o seu código por enquanto.
                fetch(`/Home/Produtos?categoriaId=${categoriaId}`)
                    .then(response => response.text())
                    .then(html => {
                        const parser = new DOMParser();
                        const doc = parser.parseFromString(html, 'text/html');
                        // Garanta que este seletor está correto, buscando os cards da tela Produtos.cshtml
                        const produtos = doc.querySelectorAll('.col-sm-6.col-xl-4'); 

                        const container = document.getElementById('produtosRelacionados');
                        container.innerHTML = ''; // Limpa o estado "Carregando"

                        let count = 0;

                        produtos.forEach(produto => {
                            // Tenta encontrar o ID do produto dentro do card (se estiver presente)
                            const link = produto.querySelector('a[href*="Detalhes"]');
                            if (link && link.href.includes(`/Detalhes/${produtoId}`)) {
                                return; // Pula o produto atual
                            }

                            // Limitar a, por exemplo, 4 produtos
                            if (count < 4) {
                                // Adiciona o produto na nova estrutura (usando o estilo do seu Products.cshtml)
                                container.appendChild(produto.cloneNode(true));
                                count++;
                            }
                        });

                        if (count === 0) {
                            // Estado VAZIO estilizado
                            container.innerHTML = `
                                <div class="col-12 text-center py-5 bg-light rounded-4 shadow-sm">
                                    <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                                    <h4 class="text-dark fw-bold">Puxa vida!</h4>
                                    <p class="text-muted">Ainda não encontramos produtos similares em nosso estoque. Volte em breve!</p>
                                </div>
                            `;
                        }
                    })
                    .catch(error => {
                        console.error('Erro ao carregar produtos relacionados:', error);
                        document.getElementById('produtosRelacionados').innerHTML = `
                            <div class="col-12 text-center py-4 alert alert-danger rounded-4">
                                <i class="fas fa-exclamation-triangle me-2"></i> 
                                Não foi possível carregar as sugestões de produtos.
                            </div>
                        `;
                    });
            }
        });
    </script>
}